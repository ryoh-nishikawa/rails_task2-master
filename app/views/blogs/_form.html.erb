<%= form_with(model: @blog, local: true ,url: choose_new_or_edit ) do |form| %>
  <% if @blog.errors.any? %>
    <div class="container">
      <div class="alert alert-danger" role="alert">
        <%= @blog.errors.count %>件のエラーがあります。
      </div>
      <ul>
        <% @blog.errors.full_messages.each do |msg| %>
          <div class=alert_msg>
            <li><%= msg %></li>
          </div>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="title">
    タイトル
  </div>
  <div class="title_text">
    <%= form.text_field :title, class:"titile_text", size: "990" %>
  </div>
  <div class="content">
    本文
  </div>
    <%= form.text_area :content, class:"content_text", size: "890*600" %>
    <a class="square_btn">
      <%= form.submit %>
    </a>
<% end %>

<%= link_to "ブログ一覧画面にもどる", blogs_path %>
